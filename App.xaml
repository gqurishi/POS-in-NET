<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:POS_in_NET"
             xmlns:converters="clr-namespace:POS_in_NET.Converters"
             x:Class="POS_in_NET.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                
                <!-- OrderWeb.net Design System -->
                <ResourceDictionary Source="Resources/Styles/OrderWebColors.xaml" />
                <ResourceDictionary Source="Resources/Styles/OrderWebStyles.xaml" />
                
                <!-- Syncfusion Modern Theme (NEW!) -->
                <ResourceDictionary Source="Resources/Styles/SyncfusionTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global Font Family - Modern Sans-Serif (OpenSans) -->
            <Style TargetType="Label" ApplyToDerivedTypes="True">
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>
            <Style TargetType="Button" ApplyToDerivedTypes="True">
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>
            <Style TargetType="Entry" ApplyToDerivedTypes="True">
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>
            <Style TargetType="Editor" ApplyToDerivedTypes="True">
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>
            <Style TargetType="Picker" ApplyToDerivedTypes="True">
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>
            
            <!-- Value Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
