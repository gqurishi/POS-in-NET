<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Controls.ToastNotification"
             x:Name="RootView">
    
    <!-- Compact Toast Container - Top Right Corner -->
    <Border x:Name="ToastBorder"
            BackgroundColor="#10B981"
            StrokeThickness="0"
            Opacity="0"
            TranslationX="400"
            Padding="14,10"
            Margin="0,20,20,0"
            WidthRequest="320"
            HorizontalOptions="End"
            VerticalOptions="Start">
        
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12"/>
        </Border.StrokeShape>
        
        <!-- Shadow Effect -->
        <Border.Shadow>
            <Shadow Brush="Black"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.2"/>
        </Border.Shadow>
        
        <Grid ColumnDefinitions="Auto,*,Auto"
              ColumnSpacing="10">
            
            <!-- Compact Icon -->
            <Border Grid.Column="0"
                    BackgroundColor="#FFFFFF25"
                    WidthRequest="32"
                    HeightRequest="32"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                
                <Label x:Name="IconLabel"
                       Text="✓"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <!-- Compact Content -->
            <VerticalStackLayout Grid.Column="1"
                                 Spacing="1"
                                 VerticalOptions="Center">
                
                <Label x:Name="TitleLabel"
                       Text="Success"
                       FontSize="13"
                       FontAttributes="Bold"
                       TextColor="White"/>
                
                <Label x:Name="MessageLabel"
                       Text="Operation completed"
                       FontSize="12"
                       TextColor="#FFFFFFDD"
                       LineBreakMode="TailTruncation"
                       MaxLines="2"/>
            </VerticalStackLayout>
            
            <!-- Compact Close Button -->
            <Border Grid.Column="2"
                    WidthRequest="24"
                    HeightRequest="24"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseTapped"/>
                </Border.GestureRecognizers>
                
                <Label Text="✕"
                       FontSize="14"
                       TextColor="#FFFFFFAA"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
        </Grid>
    </Border>
</ContentView>
