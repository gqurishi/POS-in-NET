<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Pages.FoodMenuManagement"
             xmlns:views="clr-namespace:POS_in_NET.Views"
             xmlns:controls="clr-namespace:POS_in_NET.Controls"
             Title="Food Menu Management"
             BackgroundColor="#F1F5F9">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Top Bar -->
        <views:TopBar x:Name="TopBar" Grid.Row="0" />
        
        <!-- Toast Notification Overlay -->
        <controls:ToastNotification x:Name="ToastNotification" 
                                   Grid.RowSpan="3"
                                   ZIndex="2000"
                                   InputTransparent="True"/>
        
        <!-- Clean Segmented Tab Bar -->
        <Border Grid.Row="1" 
                BackgroundColor="White"
                Stroke="#E2E8F0"
                StrokeThickness="0,0,0,1"
                Padding="20,12">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Tab Buttons - Clean Segmented Style -->
                <Border Grid.Column="0"
                        BackgroundColor="#F8FAFC"
                        Stroke="#E2E8F0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 25"
                        Padding="4">
                    <HorizontalStackLayout Spacing="0">
                        <!-- Items Tab -->
                        <Border x:Name="ItemsTabBorder"
                                BackgroundColor="#3B82F6"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 22"
                                Padding="20,10">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnItemsTabClicked"/>
                            </Border.GestureRecognizers>
                            <Label x:Name="ItemsTabLabel"
                                   Text="Items"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Sub-Categories Tab -->
                        <Border x:Name="SubCategoriesTabBorder"
                                BackgroundColor="Transparent"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 22"
                                Padding="20,10">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSubCategoriesTabClicked"/>
                            </Border.GestureRecognizers>
                            <Label x:Name="SubCategoriesTabLabel"
                                   Text="Sub-Categories"
                                   FontSize="14"
                                   TextColor="#64748B"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Categories Tab -->
                        <Border x:Name="CategoriesTabBorder"
                                BackgroundColor="Transparent"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 22"
                                Padding="20,10">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCategoriesTabClicked"/>
                            </Border.GestureRecognizers>
                            <Label x:Name="CategoriesTabLabel"
                                   Text="Categories"
                                   FontSize="14"
                                   TextColor="#64748B"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Meal Deals Tab -->
                        <Border x:Name="MealDealsTabBorder"
                                BackgroundColor="Transparent"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 22"
                                Padding="20,10">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMealDealsTabClicked"/>
                            </Border.GestureRecognizers>
                            <Label x:Name="MealDealsTabLabel"
                                   Text="Meal Deals"
                                   FontSize="14"
                                   TextColor="#64748B"
                                   VerticalOptions="Center"/>
                        </Border>
                    </HorizontalStackLayout>
                </Border>
                
                <!-- Search Bar on Right Side -->
                <Border Grid.Column="2"
                        BackgroundColor="#F8FAFC"
                        Stroke="#E2E8F0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 25"
                        Padding="4,0"
                        WidthRequest="300"
                        HeightRequest="46">
                    <Grid ColumnDefinitions="*,Auto" Padding="16,0">
                        <Entry x:Name="SearchEntry"
                               Grid.Column="0"
                               Placeholder="Search items, categories..."
                               PlaceholderColor="#94A3B8"
                               FontSize="14"
                               TextColor="#1E293B"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center"
                               TextChanged="OnSearchTextChanged"/>
                        <Border Grid.Column="1"
                                BackgroundColor="#E2E8F0"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 12"
                                Padding="8,4"
                                IsVisible="{Binding Source={x:Reference SearchEntry}, Path=Text.Length}"
                                VerticalOptions="Center">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnClearSearchClicked"/>
                            </Border.GestureRecognizers>
                            <Label Text="✕"
                                   FontSize="12"
                                   TextColor="#64748B"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="2" Padding="20">
            
            <!-- ==================== CATEGORIES CONTENT ==================== -->
            <Border x:Name="CategoriesContent" 
                    IsVisible="False"
                    BackgroundColor="White"
                    Stroke="#E2E8F0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16"
                    Padding="0">
                
                <Grid RowDefinitions="Auto,*">
                    <!-- Header -->
                    <Grid Grid.Row="0" 
                          Padding="24,20"
                          ColumnDefinitions="Auto,*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Categories"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B"/>
                            <Label Text="Organize your menu with categories and sub-categories"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2"
                                Text="+ Add Category"
                                BackgroundColor="#10B981"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="20,12"
                                Clicked="OnAddCategoryClicked"/>
                    </Grid>
                    
                    <!-- Categories List -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="0">
                            <!-- Table Column Headers -->
                            <Grid ColumnDefinitions="50,*,100,100,100" ColumnSpacing="10" Padding="24,12" BackgroundColor="White">
                                <Label Grid.Column="0" Text="" FontSize="12" TextColor="#64748B" FontAttributes="Bold"/>
                                <Label Grid.Column="1" Text="Category" FontSize="12" TextColor="#64748B" FontAttributes="Bold"/>
                                <Label Grid.Column="2" Text="Items" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="3" Text="Status" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="4" Text="Actions" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                            </Grid>
                            <BoxView HeightRequest="1" Color="#E2E8F0"/>
                            <!-- List Items Container -->
                            <VerticalStackLayout x:Name="CategoriesListContainer" Spacing="0"/>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
            
            <!-- ==================== SUB-CATEGORIES CONTENT ==================== -->
            <Border x:Name="SubCategoriesContent" 
                    IsVisible="False"
                    BackgroundColor="White"
                    Stroke="#E2E8F0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16"
                    Padding="0">
                
                <Grid RowDefinitions="Auto,*">
                    <!-- Header -->
                    <Grid Grid.Row="0" 
                          Padding="24,20"
                          ColumnDefinitions="Auto,*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Sub-Categories"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B"/>
                            <Label Text="Create sub-categories under main categories"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2"
                                Text="+ Add Sub-Category"
                                BackgroundColor="#8B5CF6"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="20,12"
                                Clicked="OnAddSubCategoryClicked"/>
                    </Grid>
                    
                    <!-- Sub-Categories List -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="0">
                            <!-- Table Column Headers -->
                            <Grid ColumnDefinitions="*,150,100,100,100" ColumnSpacing="10" Padding="24,12" BackgroundColor="White">
                                <Label Grid.Column="0" Text="Sub-Category" FontSize="12" TextColor="#64748B" FontAttributes="Bold"/>
                                <Label Grid.Column="1" Text="Parent Category" FontSize="12" TextColor="#64748B" FontAttributes="Bold"/>
                                <Label Grid.Column="2" Text="Items" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="3" Text="Status" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="4" Text="Actions" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                            </Grid>
                            <BoxView HeightRequest="1" Color="#E2E8F0"/>
                            <!-- List Items Container -->
                            <VerticalStackLayout x:Name="SubCategoriesListContainer" Spacing="0"/>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
            
            <!-- ==================== ITEMS CONTENT ==================== -->
            <Border x:Name="ItemsContent" 
                    IsVisible="True"
                    BackgroundColor="White"
                    Stroke="#E2E8F0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16"
                    Padding="0">
                
                <Grid RowDefinitions="Auto,*">
                    <!-- Header -->
                    <Grid Grid.Row="0" 
                          Padding="24,20"
                          ColumnDefinitions="Auto,*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Menu Items"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B"/>
                            <Label Text="Manage your food items, set menus, and add-ons"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2"
                                Text="+ Add Item"
                                BackgroundColor="#3B82F6"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="20,12"
                                Clicked="OnAddItemClicked"/>
                    </Grid>
                    
                    <!-- Items List -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="0">
                            <!-- Table Column Headers -->
                            <Grid ColumnDefinitions="60,*,120,150,100,120" ColumnSpacing="10" Padding="24,12" BackgroundColor="White">
                                <Label Grid.Column="0" Text="#" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="1" Text="Item" FontSize="12" TextColor="#64748B" FontAttributes="Bold"/>
                                <Label Grid.Column="2" Text="Price" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="3" Text="Category" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="4" Text="Status" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="5" Text="Actions" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                            </Grid>
                            <BoxView HeightRequest="1" Color="#E2E8F0"/>
                            <!-- List Items Container -->
                            <VerticalStackLayout x:Name="ItemsListContainer" Spacing="0"/>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
            
            <!-- ==================== MEAL DEALS CONTENT ==================== -->
            <Border x:Name="MealDealsContent" 
                    IsVisible="False"
                    BackgroundColor="White"
                    Stroke="#E2E8F0"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 16"
                    Padding="0">
                
                <Grid RowDefinitions="Auto,*">
                    <!-- Header -->
                    <Grid Grid.Row="0" 
                          Padding="24,20"
                          ColumnDefinitions="Auto,*,Auto">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Meal Deals"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B"/>
                            <Label Text="Create bundle offers and combo deals"
                                   FontSize="13"
                                   TextColor="#64748B"/>
                        </VerticalStackLayout>
                        
                        <Button Grid.Column="2"
                                Text="+ Create Meal Deal"
                                BackgroundColor="#F59E0B"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                Padding="20,12"
                                Clicked="OnAddMealDealClicked"/>
                    </Grid>
                    
                    <!-- Meal Deals List -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="0">
                            <!-- Table Column Headers -->
                            <Grid ColumnDefinitions="*,100,120,100,100" ColumnSpacing="10" Padding="24,12" BackgroundColor="White">
                                <Label Grid.Column="0" Text="Deal Name" FontSize="12" TextColor="#64748B" FontAttributes="Bold"/>
                                <Label Grid.Column="1" Text="Price" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="2" Text="Items" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="3" Text="Status" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                                <Label Grid.Column="4" Text="Actions" FontSize="12" TextColor="#64748B" FontAttributes="Bold" HorizontalOptions="Center"/>
                            </Grid>
                            <BoxView HeightRequest="1" Color="#E2E8F0"/>
                            <!-- List Items Container -->
                            <VerticalStackLayout x:Name="MealDealsListContainer" Spacing="0"/>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>
            
        </Grid>
        
        <!-- Add Category Dialog Overlay -->
        <Grid x:Name="AddCategoryDialog" 
              Grid.RowSpan="3" 
              IsVisible="False" 
              BackgroundColor="#80000000"
              ZIndex="1000">
            <Border BackgroundColor="White"
                    WidthRequest="500"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 16"
                    Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#40000000" Offset="0,10" Radius="30" Opacity="0.3"/>
                </Border.Shadow>
                
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Dialog Header -->
                    <Grid Grid.Row="0" 
                          BackgroundColor="#10B981"
                          Padding="24,18">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   x:Name="CategoryDialogTitle"
                                   Text="Add New Category"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                            <Button Grid.Column="1"
                                    Text="X"
                                    FontSize="16"
                                    TextColor="White"
                                    BackgroundColor="#EF4444"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    CornerRadius="18"
                                    Padding="0"
                                    Clicked="OnCategoryDialogClose"/>
                        </Grid>
                    </Grid>
                    
                    <!-- Dialog Content -->
                    <VerticalStackLayout Grid.Row="1" Padding="24" Spacing="20">
                        <!-- Name Field -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Name *"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#334155"/>
                            <Border BackgroundColor="#F8FAFC"
                                    Stroke="#E2E8F0"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 8"
                                    Padding="12,0">
                                <Entry x:Name="CategoryNameEntry"
                                       Placeholder="Category name"
                                       PlaceholderColor="#94A3B8"
                                       FontSize="15"
                                       TextColor="#1E293B"
                                       HeightRequest="48"/>
                            </Border>
                        </VerticalStackLayout>
                        
                        <!-- Color Selection -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Color"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#334155"/>
                            <FlexLayout x:Name="ColorPickerContainer" 
                                        Wrap="Wrap" 
                                        JustifyContent="Start"
                                        AlignItems="Center"/>
                            
                            <!-- Custom Color Option -->
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12" Margin="0,8,0,0">
                                <Label Grid.Column="0"
                                       Text="Custom:"
                                       FontSize="13"
                                       TextColor="#64748B"
                                       VerticalOptions="Center"/>
                                <Border Grid.Column="1"
                                        BackgroundColor="#F8FAFC"
                                        Stroke="#E2E8F0"
                                        StrokeThickness="1"
                                        StrokeShape="RoundRectangle 8"
                                        Padding="12,0"
                                        HeightRequest="40">
                                    <Entry x:Name="CustomColorEntry"
                                           Placeholder="#HEX (e.g. #FF5733)"
                                           PlaceholderColor="#94A3B8"
                                           FontSize="13"
                                           TextColor="#1E293B"
                                           VerticalOptions="Center"
                                           TextChanged="OnCustomColorTextChanged"/>
                                </Border>
                                <Border x:Name="CustomColorPreview"
                                        Grid.Column="2"
                                        BackgroundColor="#CCCCCC"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeShape="RoundRectangle 8"
                                        StrokeThickness="2"
                                        Stroke="#E2E8F0"/>
                            </Grid>
                        </VerticalStackLayout>
                        
                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="*,Auto" Padding="0,10">
                            <Label Grid.Column="0"
                                   Text="Active"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#334155"
                                   VerticalOptions="Center"/>
                            <Switch x:Name="CategoryActiveSwitch"
                                    Grid.Column="1"
                                    IsToggled="True"
                                    OnColor="#10B981"/>
                        </Grid>
                    </VerticalStackLayout>
                    
                    <!-- Dialog Buttons -->
                    <Grid Grid.Row="2" 
                          ColumnDefinitions="*,*" 
                          ColumnSpacing="12"
                          Padding="24,16"
                          BackgroundColor="#F8FAFC">
                        <Button Grid.Column="0"
                                Text="Cancel"
                                BackgroundColor="#E2E8F0"
                                TextColor="#64748B"
                                FontSize="15"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="48"
                                Clicked="OnCategoryDialogClose"/>
                        <Button Grid.Column="1"
                                x:Name="SaveCategoryButton"
                                Text="Save Category"
                                BackgroundColor="#10B981"
                                TextColor="White"
                                FontSize="15"
                                FontAttributes="Bold"
                                CornerRadius="10"
                                HeightRequest="48"
                                Clicked="OnSaveCategoryClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Add Sub-Category Dialog Overlay -->
        <Grid x:Name="AddSubCategoryDialog" 
              Grid.RowSpan="3" 
              IsVisible="False" 
              BackgroundColor="#80000000"
              ZIndex="1000">
            <Border BackgroundColor="White"
                    WidthRequest="700"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20"
                    Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#40000000" Offset="0,10" Radius="30" Opacity="0.3"/>
                </Border.Shadow>
                
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Dialog Header -->
                    <Grid Grid.Row="0" 
                          BackgroundColor="#8B5CF6"
                          Padding="32,22">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   x:Name="SubCategoryDialogTitle"
                                   Text="Add New Sub-Category"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                            <Button Grid.Column="1"
                                    Text="X"
                                    FontSize="18"
                                    TextColor="White"
                                    BackgroundColor="#EF4444"
                                    WidthRequest="42"
                                    HeightRequest="42"
                                    CornerRadius="21"
                                    Padding="0"
                                    Clicked="OnSubCategoryDialogClose"/>
                        </Grid>
                    </Grid>
                    
                    <!-- Dialog Content -->
                    <VerticalStackLayout Grid.Row="1" Padding="32,28" Spacing="24">
                        <!-- Name Field -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Name *"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#334155"/>
                            <Border BackgroundColor="#F8FAFC"
                                    Stroke="#E2E8F0"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 10"
                                    Padding="16,0">
                                <Entry x:Name="SubCategoryNameEntry"
                                       Placeholder="Sub-category name"
                                       PlaceholderColor="#94A3B8"
                                       FontSize="17"
                                       TextColor="#1E293B"
                                       HeightRequest="54"/>
                            </Border>
                        </VerticalStackLayout>
                        
                        <!-- Parent Category Selection -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Parent Category *"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#334155"/>
                            <Border BackgroundColor="#F8FAFC"
                                    Stroke="#E2E8F0"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 10"
                                    Padding="20,18">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label x:Name="ParentCategoryLabel"
                                           Grid.Column="0"
                                           Text="Select parent category"
                                           FontSize="17"
                                           TextColor="#94A3B8"
                                           VerticalOptions="Center"/>
                                    <Label Grid.Column="1"
                                           Text="▼"
                                           FontSize="16"
                                           TextColor="#64748B"
                                           VerticalOptions="Center"/>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnParentCategoryFieldTapped"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                        
                        <!-- Color Selection -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Color"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#334155"/>
                            <FlexLayout x:Name="SubCategoryColorPickerContainer" 
                                        Wrap="Wrap" 
                                        JustifyContent="Start"
                                        AlignItems="Center"/>
                            
                            <!-- Custom Color Option -->
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12" Margin="0,8,0,0">
                                <Label Grid.Column="0"
                                       Text="Custom:"
                                       FontSize="13"
                                       TextColor="#64748B"
                                       VerticalOptions="Center"/>
                                <Border Grid.Column="1"
                                        BackgroundColor="#F8FAFC"
                                        Stroke="#E2E8F0"
                                        StrokeThickness="1"
                                        StrokeShape="RoundRectangle 8"
                                        Padding="12,0"
                                        HeightRequest="40">
                                    <Entry x:Name="SubCategoryCustomColorEntry"
                                           Placeholder="#HEX (e.g. #FF5733)"
                                           PlaceholderColor="#94A3B8"
                                           FontSize="13"
                                           TextColor="#1E293B"
                                           VerticalOptions="Center"
                                           TextChanged="OnSubCategoryCustomColorTextChanged"/>
                                </Border>
                                <Border x:Name="SubCategoryCustomColorPreview"
                                        Grid.Column="2"
                                        BackgroundColor="#CCCCCC"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeShape="RoundRectangle 8"
                                        StrokeThickness="2"
                                        Stroke="#E2E8F0"/>
                            </Grid>
                        </VerticalStackLayout>
                        
                        <!-- Active Toggle -->
                        <Grid ColumnDefinitions="*,Auto" Padding="0,12">
                            <Label Grid.Column="0"
                                   Text="Active"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#334155"
                                   VerticalOptions="Center"/>
                            <Switch x:Name="SubCategoryActiveSwitch"
                                    Grid.Column="1"
                                    IsToggled="True"
                                    Scale="1.2"
                                    OnColor="#8B5CF6"/>
                        </Grid>
                    </VerticalStackLayout>
                    
                    <!-- Dialog Buttons -->
                    <Grid Grid.Row="2" 
                          ColumnDefinitions="*,*" 
                          ColumnSpacing="16"
                          Padding="32,20"
                          BackgroundColor="#F8FAFC">
                        <Button Grid.Column="0"
                                Text="Cancel"
                                BackgroundColor="#E2E8F0"
                                TextColor="#64748B"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="12"
                                HeightRequest="54"
                                Clicked="OnSubCategoryDialogClose"/>
                        <Button Grid.Column="1"
                                x:Name="SaveSubCategoryButton"
                                Text="Save Sub-Category"
                                BackgroundColor="#8B5CF6"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                CornerRadius="12"
                                HeightRequest="54"
                                Clicked="OnSaveSubCategoryClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Parent Category Selection Dialog -->
        <Grid x:Name="ParentCategorySelectionDialog"
              Grid.RowSpan="3"
              IsVisible="False"
              BackgroundColor="#80000000"
              ZIndex="2000"
              Padding="40">
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 20"
                    WidthRequest="600"
                    MaximumHeightRequest="680"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,8" Radius="24" Opacity="0.15"/>
                </Border.Shadow>
                <Grid RowDefinitions="Auto,*" Padding="0">
                    <!-- Header -->
                    <Grid Grid.Row="0" 
                          BackgroundColor="#8B5CF6" 
                          Padding="36,26"
                          ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
