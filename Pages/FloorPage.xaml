<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:POS_in_NET.Views"
             xmlns:controls="clr-namespace:POS_in_NET.Controls"
             x:Class="POS_in_NET.Pages.FloorPage"
             Title=""
             BackgroundColor="{StaticResource Background}">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Top Bar (150px) -->
        <views:TopBar x:Name="TopBar" Grid.Row="0"/>
        
        <!-- Content with Overlay -->
        <Grid Grid.Row="1">
            
            <!-- Toast Notification Overlay (On top of everything) -->
            <controls:ToastNotification x:Name="ToastNotification" 
                                       Grid.RowSpan="2"
                                       ZIndex="1000"
                                       InputTransparent="True"/>
        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*" Padding="20">
        
        <!-- Header Section -->
        <StackLayout Grid.Row="0" Spacing="20" Margin="0,0,0,25">
            
            <Button x:Name="AddFloorButton"
                    Text="Add New Floor"
                    BackgroundColor="#3B82F6"
                    TextColor="White"
                    FontFamily="OpenSansSemibold"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Clicked="OnAddFloorClicked"
                    HorizontalOptions="Fill" />
            
            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                             IsRunning="False"
                             IsVisible="False"
                             Color="#3B82F6"
                             HeightRequest="40" />
        </StackLayout>

        <!-- Floors List -->
        <ScrollView Grid.Row="1">
            <CollectionView x:Name="FloorsCollectionView"
                          SelectionMode="None"
                          Margin="0,5,0,10">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="20" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White"
                                Padding="16"
                                Margin="0"
                                Stroke="#D1D5DB"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="15">
                                
                                <!-- Floor Icon -->
                                <Frame Grid.Column="0"
                                       BackgroundColor="#EFF6FF"
                                       Padding="8"
                                       CornerRadius="10"
                                       HasShadow="False"
                                       VerticalOptions="Center"
                                       WidthRequest="52"
                                       HeightRequest="52">
                                    <Image Source="floor.png"
                                           WidthRequest="36"
                                           HeightRequest="36"
                                           Aspect="AspectFit"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center" />
                                </Frame>

                                <!-- Floor Info -->
                                <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontFamily="OpenSansSemibold"
                                           FontAttributes="Bold"
                                           TextColor="#1F2937" />
                                    <Label TextColor="#6B7280" 
                                           FontSize="13"
                                           FontFamily="OpenSansRegular">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Tables: " />
                                                <Span Text="{Binding TableCount}" FontAttributes="Bold" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>

                                <!-- Edit Button -->
                                <Button Grid.Column="2"
                                        Text="Edit"
                                        BackgroundColor="#F3F4F6"
                                        TextColor="#6B7280"
                                        FontFamily="OpenSansSemibold"
                                        FontSize="13"
                                        WidthRequest="70"
                                        HeightRequest="38"
                                        CornerRadius="8"
                                        Clicked="OnEditFloorClicked"
                                        CommandParameter="{Binding .}" />

                                <!-- Delete Button -->
                                <Button Grid.Column="3"
                                        Text="Delete"
                                        BackgroundColor="#FEE2E2"
                                        TextColor="#DC2626"
                                        FontFamily="OpenSansSemibold"
                                        FontSize="13"
                                        WidthRequest="70"
                                        HeightRequest="38"
                                        CornerRadius="8"
                                        Clicked="OnDeleteFloorClicked"
                                        CommandParameter="{Binding .}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout Padding="40" VerticalOptions="Center" Spacing="15">
                        <Image Source="floor.png"
                               WidthRequest="80"
                               HeightRequest="80"
                               HorizontalOptions="Center"
                               Opacity="0.3" />
                        <Label Text="No Floors Yet"
                               FontSize="18"
                               FontFamily="OpenSansSemibold"
                               FontAttributes="Bold"
                               TextColor="#9CA3AF"
                               HorizontalOptions="Center" />
                        <Label Text="Click 'Add New Floor' to get started"
                               FontSize="14"
                               FontFamily="OpenSansRegular"
                               TextColor="#D1D5DB"
                               HorizontalOptions="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </ScrollView>
        </Grid>
        
        <!-- Custom Dialog Overlays -->
        <views:AddFloorDialog x:Name="AddFloorDialogOverlay"
                              IsVisible="False" />
        <views:EditFloorDialog x:Name="EditFloorDialogOverlay"
                               IsVisible="False" />
        </Grid>
    </Grid>
</ContentPage>

