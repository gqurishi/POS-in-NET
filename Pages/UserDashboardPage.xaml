<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Pages.UserDashboardPage"
             Title="Restaurant POS"
             BackgroundColor="#F8FAFC">

    <Grid>
        <!-- Header -->
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Header Bar -->
        <Border Grid.Row="0" 
                BackgroundColor="White"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="#E5E7EB" Radius="4" Opacity="0.1" Offset="0,2"/>
            </Border.Shadow>
            
            <Grid Padding="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Welcome Message -->
                <StackLayout Grid.Column="0" 
                             VerticalOptions="Center">
                    <Label Text="Restaurant POS" 
                           FontFamily="InterBold" 
                           FontSize="24" 
                           TextColor="#1F2937"/>
                    <Label x:Name="WelcomeLabel"
                           Text="Welcome, User!" 
                           FontFamily="InterMedium" 
                           FontSize="14" 
                           TextColor="#6B7280"/>
                </StackLayout>
                
                <!-- Date Time -->
                <StackLayout Grid.Column="1" 
                             VerticalOptions="Center" 
                             HorizontalOptions="End"
                             Margin="0,0,20,0">
                    <Label x:Name="DateLabel" 
                           Text="Monday, December 29, 2025" 
                           FontFamily="InterMedium" 
                           FontSize="14" 
                           TextColor="#374151"
                           HorizontalOptions="End"/>
                    <Label x:Name="TimeLabel" 
                           Text="12:43 AM" 
                           FontFamily="InterBold" 
                           FontSize="20" 
                           TextColor="#3B82F6"
                           HorizontalOptions="End"/>
                </StackLayout>
                
                <!-- Logout Button -->
                <Button Grid.Column="2" 
                        Text="Logout"
                        BackgroundColor="#EF4444"
                        TextColor="White"
                        FontFamily="InterMedium"
                        FontSize="14"
                        WidthRequest="80"
                        HeightRequest="40"
                        CornerRadius="8"
                        Clicked="OnLogoutClicked">
                    <Button.Shadow>
                        <Shadow Brush="#EF4444" Radius="8" Opacity="0.3" Offset="0,2"/>
                    </Button.Shadow>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" 
                    Padding="40">
            <StackLayout Spacing="40" 
                         VerticalOptions="Center"
                         MaximumWidthRequest="800"
                         HorizontalOptions="Center">
                
                <!-- Title -->
                <Label Text="Select Operation" 
                       FontFamily="InterBold" 
                       FontSize="32" 
                       TextColor="#1F2937"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20"/>
                
                <!-- Main Action Buttons -->
                <Grid RowSpacing="30" 
                      ColumnSpacing="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Collection Button -->
                    <Border Grid.Row="0" Grid.Column="0"
                            BackgroundColor="#10B981"
                            StrokeThickness="0"
                            HeightRequest="200">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#10B981" Radius="20" Opacity="0.3" Offset="0,8"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCollectionClicked"/>
                        </Border.GestureRecognizers>
                        
                        <StackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center" 
                                     Spacing="20">
                            <!-- Collection Icon -->
                            <Label Text="ðŸ“¦" 
                                   FontSize="60" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Collection" 
                                   FontFamily="InterBold" 
                                   FontSize="24" 
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label Text="Manage pickup orders" 
                                   FontFamily="InterMedium" 
                                   FontSize="14" 
                                   TextColor="White"
                                   Opacity="0.9"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Border>
                    
                    <!-- Delivery Button -->
                    <Border Grid.Row="0" Grid.Column="1"
                            BackgroundColor="#8B5CF6"
                            StrokeThickness="0"
                            HeightRequest="200">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#8B5CF6" Radius="20" Opacity="0.3" Offset="0,8"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDeliveryClicked"/>
                        </Border.GestureRecognizers>
                        
                        <StackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center" 
                                     Spacing="20">
                            <!-- Delivery Icon -->
                            <Label Text="ðŸšš" 
                                   FontSize="60" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Delivery" 
                                   FontFamily="InterBold" 
                                   FontSize="24" 
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label Text="Handle delivery orders" 
                                   FontFamily="InterMedium" 
                                   FontSize="14" 
                                   TextColor="White"
                                   Opacity="0.9"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Border>
                    
                    <!-- Restaurant Button (Spans 2 columns) -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                            BackgroundColor="#3B82F6"
                            StrokeThickness="0"
                            HeightRequest="200">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#3B82F6" Radius="20" Opacity="0.3" Offset="0,8"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRestaurantClicked"/>
                        </Border.GestureRecognizers>
                        
                        <StackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center" 
                                     Spacing="20">
                            <!-- Restaurant Icon -->
                            <Label Text="ðŸª" 
                                   FontSize="60" 
                                   HorizontalOptions="Center"/>
                            <Label Text="Restaurant" 
                                   FontFamily="InterBold" 
                                   FontSize="28" 
                                   TextColor="White"
                                   HorizontalOptions="Center"/>
                            <Label Text="Manage dine-in tables and orders" 
                                   FontFamily="InterMedium" 
                                   FontSize="16" 
                                   TextColor="White"
                                   Opacity="0.9"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Border>
                </Grid>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>