<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:POS_in_NET.Views"
             xmlns:controls="clr-namespace:POS_in_NET.Controls"
             x:Class="POS_in_NET.Pages.VisualTablePage"
             Title=""
             BackgroundColor="White">
    
    <ContentPage.Resources>
        <Style x:Key="CoverButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="#F3F4F6"/>
            <Setter Property="TextColor" Value="#1F2937"/>
            <Setter Property="FontFamily" Value="OpenSansSemibold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="HeightRequest" Value="56"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        
        <!-- Top Bar -->
        <views:TopBar x:Name="TopBar" Grid.Row="0"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,*" Padding="0">
            
            <!-- Toast Notification Overlay -->
            <controls:ToastNotification x:Name="ToastNotification" 
                                       Grid.RowSpan="3"
                                       ZIndex="1000"
                                       InputTransparent="True"/>
        
            <!-- Floor Tabs Bar (Fixed at top) -->
            <Border Grid.Row="0" 
                    BackgroundColor="White"
                    Stroke="#E5E7EB"
                    StrokeThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto" Padding="20,15">
                    
                    <!-- Floor Pills -->
                    <ScrollView Grid.Column="0" 
                               Orientation="Horizontal" 
                               HorizontalScrollBarVisibility="Never">
                        <HorizontalStackLayout x:Name="FloorTabsLayout" 
                                              Spacing="10">
                            <!-- Floor tabs will be generated dynamically -->
                        </HorizontalStackLayout>
                    </ScrollView>
                    
                    <!-- Admin Tools -->
                    <HorizontalStackLayout Grid.Column="1" 
                                          Spacing="12"
                                          VerticalOptions="Center">
                        
                        <!-- Set Background Button -->
                        <Border x:Name="SetBackgroundButton"
                                BackgroundColor="#F3F4F6"
                                Stroke="#E5E7EB"
                                StrokeThickness="1"
                                Padding="12,8"
                                IsVisible="False">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSetBackgroundClicked"/>
                            </Border.GestureRecognizers>
                            <Label Text="Set Background" 
                                   FontSize="13" 
                                   FontFamily="OpenSansSemibold"
                                   TextColor="#374151"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Remove Background Button -->
                        <Border x:Name="RemoveBackgroundButton"
                                BackgroundColor="#FEE2E2"
                                Stroke="#FECACA"
                                StrokeThickness="1"
                                Padding="12,8"
                                IsVisible="False">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRemoveBackgroundClicked"/>
                            </Border.GestureRecognizers>
                            <Label Text="Remove Background" 
                                   FontSize="13" 
                                   FontFamily="OpenSansSemibold"
                                   TextColor="#DC2626"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                        <!-- Save Layout Button -->
                        <Border x:Name="SaveLayoutButton"
                                BackgroundColor="#3B82F6"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                Padding="14,8"
                                IsVisible="False">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSaveLayoutClicked"/>
                            </Border.GestureRecognizers>
                            <Label Text="Save Layout" 
                                   FontSize="13" 
                                   FontFamily="OpenSansSemibold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                        </Border>
                        
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Unsaved Changes Indicator -->
            <Border x:Name="UnsavedChangesBar"
                    Grid.Row="1"
                    BackgroundColor="#FEF3C7"
                    Padding="15,10"
                    IsVisible="False">
                <Label Text="You have unsaved changes" 
                       FontSize="13"
                       FontFamily="OpenSansSemibold"
                       TextColor="#92400E"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

            <!-- Full Screen Table Canvas -->
            <AbsoluteLayout x:Name="TableCanvas"
                           Grid.Row="2"
                           BackgroundColor="White">
                
                <!-- Background Image (if set by admin) -->
                <Image x:Name="CanvasBackgroundImage"
                       AbsoluteLayout.LayoutBounds="0,0,1,1"
                       AbsoluteLayout.LayoutFlags="All"
                       Aspect="Fill"
                       Opacity="0.3"
                       IsVisible="False"/>
                
                <!-- Tables will be added dynamically here -->
                
                <!-- Empty State Message -->
                <VerticalStackLayout x:Name="EmptyStateView"
                                    AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    Spacing="15"
                                    IsVisible="False">
                    <Frame Padding="20"
                           CornerRadius="50"
                           BackgroundColor="#F3F4F6"
                           HasShadow="False"
                           HorizontalOptions="Center">
                        <Image Source="table_1.png"
                               WidthRequest="60"
                               HeightRequest="60"
                               Opacity="0.4"/>
                    </Frame>
                    <Label Text="No Tables on This Floor"
                           FontSize="18"
                           FontFamily="OpenSansSemibold"
                           TextColor="#9CA3AF"
                           HorizontalOptions="Center"/>
                    <Label Text="Add tables from Table Management"
                           FontSize="14"
                           FontFamily="OpenSansRegular"
                           TextColor="#D1D5DB"
                           HorizontalOptions="Center"/>
                    <Button Text="Go to Table Management"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            FontFamily="OpenSansSemibold"
                            FontSize="14"
                            CornerRadius="8"
                            Padding="20,12"
                            Margin="0,10,0,0"
                            HorizontalOptions="Center"
                            Clicked="OnGoToTableManagementClicked"/>
                </VerticalStackLayout>
                
            </AbsoluteLayout>
            
            <!-- Cover Selection Popup Overlay -->
            <Grid x:Name="CoverPopupOverlay" 
                  Grid.Row="2"
                  BackgroundColor="#80000000"
                  IsVisible="False"
                  ZIndex="100">
                
                <!-- Popup Card -->
                <Border HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="White"
                        Stroke="#E5E7EB"
                        StrokeThickness="0"
                        Padding="0"
                        WidthRequest="380">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="0,8" Radius="24" Opacity="0.25"/>
                    </Border.Shadow>
                    
                    <VerticalStackLayout Spacing="0">
                        
                        <!-- Header -->
                        <Grid ColumnDefinitions="*,Auto" 
                              Padding="24,20"
                              BackgroundColor="#F9FAFB">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label x:Name="CoverPopupTitle"
                                       Text="Table 10"
                                       FontSize="20"
                                       FontFamily="OpenSansSemibold"
                                       TextColor="#1F2937"/>
                                <Label Text="How many guests?"
                                       FontSize="14"
                                       FontFamily="OpenSansRegular"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>
                            
                            <!-- Close Button -->
                            <Border Grid.Column="1"
                                    BackgroundColor="#FEE2E2"
                                    Stroke="Transparent"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    VerticalOptions="Start">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="18"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseCoverPopup"/>
                                </Border.GestureRecognizers>
                                <Label Text="X"
                                       FontSize="16"
                                       FontFamily="OpenSansSemibold"
                                       TextColor="#DC2626"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                        </Grid>
                        
                        <!-- Cover Number Grid -->
                        <Grid Padding="20" 
                              ColumnDefinitions="*,*,*,*"
                              RowDefinitions="Auto,Auto,Auto"
                              ColumnSpacing="10"
                              RowSpacing="10">
                            
                            <!-- Row 1: 1-4 -->
                            <Button Grid.Row="0" Grid.Column="0" Text="1" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="0" Grid.Column="1" Text="2" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="0" Grid.Column="2" Text="3" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="0" Grid.Column="3" Text="4" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            
                            <!-- Row 2: 5-8 -->
                            <Button Grid.Row="1" Grid.Column="0" Text="5" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="1" Grid.Column="1" Text="6" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="1" Grid.Column="2" Text="7" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="1" Grid.Column="3" Text="8" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            
                            <!-- Row 3: 9-12 -->
                            <Button Grid.Row="2" Grid.Column="0" Text="9" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="2" Grid.Column="1" Text="10" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="2" Grid.Column="2" Text="11" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                            <Button Grid.Row="2" Grid.Column="3" Text="12" Style="{StaticResource CoverButtonStyle}" Clicked="OnCoverSelected"/>
                        </Grid>
                        
                        <!-- Custom Input Section -->
                        <Border BackgroundColor="#F9FAFB"
                                Stroke="Transparent"
                                Padding="20,16">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <Border Grid.Column="0"
                                        BackgroundColor="White"
                                        Stroke="#D1D5DB"
                                        StrokeThickness="1"
                                        Padding="12,8">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnCustomCoverTapped"/>
                                    </Border.GestureRecognizers>
                                    <Label x:Name="CustomCoverLabel"
                                           Text="Other number..."
                                           FontSize="15"
                                           FontFamily="OpenSansRegular"
                                           TextColor="#9CA3AF"
                                           VerticalOptions="Center"/>
                                </Border>
                                <Button Grid.Column="1"
                                        Text="Go"
                                        BackgroundColor="#3B82F6"
                                        TextColor="White"
                                        FontFamily="OpenSansSemibold"
                                        FontSize="14"
                                        CornerRadius="8"
                                        Padding="20,12"
                                        Clicked="OnCustomCoverSubmit"/>
                            </Grid>
                        </Border>
                        
                    </VerticalStackLayout>
                </Border>
            </Grid>

        </Grid>
        
        <!-- Numeric Keyboard Dialog -->
        <views:NumericKeyboardDialog x:Name="NumericKeyboard" 
                                     Grid.RowSpan="3"
                                     ZIndex="2000"/>
    </Grid>

</ContentPage>
