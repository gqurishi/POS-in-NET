<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- ========================================
         SYNCFUSION MODERN THEME COLORS
         Professional, Clean, Material Design 3 Inspired
    ========================================= -->
    
    <!-- Primary Colors -->
    <Color x:Key="Primary">#6366F1</Color> <!-- Indigo -->
    <Color x:Key="PrimaryDark">#4F46E5</Color>
    <Color x:Key="PrimaryLight">#818CF8</Color>
    <Color x:Key="PrimaryLighter">#C7D2FE</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#10B981</Color> <!-- Emerald Green -->
    <Color x:Key="SecondaryDark">#059669</Color>
    <Color x:Key="SecondaryLight">#34D399</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Accent">#F59E0B</Color> <!-- Amber -->
    <Color x:Key="AccentDark">#D97706</Color>
    <Color x:Key="AccentLight">#FBBF24</Color>
    
    <!-- Neutral/Background Colors -->
    <Color x:Key="Background">#F8FAFC</Color> <!-- Slate 50 -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceVariant">#F1F5F9</Color> <!-- Slate 100 -->
    <Color x:Key="CardBackground">#FFFFFF</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#0F172A</Color> <!-- Slate 900 -->
    <Color x:Key="TextSecondary">#475569</Color> <!-- Slate 600 -->
    <Color x:Key="TextTertiary">#94A3B8</Color> <!-- Slate 400 -->
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    
    <!-- Status Colors -->
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Error">#EF4444</Color>
    <Color x:Key="Info">#3B82F6</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#E2E8F0</Color> <!-- Slate 200 -->
    <Color x:Key="BorderLight">#F1F5F9</Color>
    <Color x:Key="Divider">#E2E8F0</Color>
    
    <!-- Shadow Color -->
    <Color x:Key="Shadow">#1E293B</Color> <!-- Slate 800 with alpha -->
    
    
    <!-- ========================================
         MODERN CARD STYLES
    ========================================= -->
    
    <Style x:Key="ModernCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource CardBackground}" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Shadow}"
                    Opacity="0.08"
                    Radius="20"
                    Offset="0,4" />
        </Setter>
    </Style>
    
    <Style x:Key="KPICard" TargetType="Frame" BasedOn="{StaticResource ModernCard}">
        <Setter Property="Padding" Value="24" />
        <Setter Property="MinimumHeightRequest" Value="120" />
    </Style>
    
    <Style x:Key="CompactCard" TargetType="Frame" BasedOn="{StaticResource ModernCard}">
        <Setter Property="Padding" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>
    
    
    <!-- ========================================
         MODERN BUTTON STYLES
    ========================================= -->
    
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,14" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}"
                    Opacity="0.3"
                    Radius="12"
                    Offset="0,4" />
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
                            <Setter Property="Scale" Value="0.96" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,14" />
    </Style>
    
    <Style x:Key="OutlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,14" />
    </Style>
    
    <Style x:Key="TextButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="16,12" />
    </Style>
    
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceVariant}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="CornerRadius" Value="50" />
        <Setter Property="WidthRequest" Value="48" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    
    
    <!-- ========================================
         TEXT STYLES
    ========================================= -->
    
    <Style x:Key="DisplayLarge" TargetType="Label">
        <Setter Property="FontSize" Value="57" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>
    
    <Style x:Key="DisplayMedium" TargetType="Label">
        <Setter Property="FontSize" Value="45" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.2" />
    </Style>
    
    <Style x:Key="HeadlineLarge" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.3" />
    </Style>
    
    <Style x:Key="HeadlineMedium" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.3" />
    </Style>
    
    <Style x:Key="HeadlineSmall" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.3" />
    </Style>
    
    <Style x:Key="TitleLarge" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>
    
    <Style x:Key="TitleMedium" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>
    
    <Style x:Key="BodyLarge" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>
    
    <Style x:Key="BodyMedium" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>
    
    <Style x:Key="BodySmall" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="LineHeight" Value="1.5" />
    </Style>
    
    <Style x:Key="LabelLarge" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>
    
    <Style x:Key="LabelMedium" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>
    
    <Style x:Key="Caption" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>
    
    
    <!-- ========================================
         INPUT STYLES
    ========================================= -->
    
    <Style x:Key="ModernEntry" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <Style x:Key="ModernEditor" TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="MinimumHeightRequest" Value="100" />
        <Setter Property="Margin" Value="0,8" />
    </Style>
    
    <Style x:Key="ModernPicker" TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="TitleColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Margin" Value="0,8" />
    </Style>
    
    
    <!-- ========================================
         KPI & STAT CARD STYLES
    ========================================= -->
    
    <Style x:Key="KPIValue" TargetType="Label">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>
    
    <Style x:Key="KPILabel" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="Margin" Value="0,8,0,0" />
    </Style>
    
    <Style x:Key="KPIChange" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,4,0,0" />
    </Style>
    
    
    <!-- ========================================
         BADGE STYLES
    ========================================= -->
    
    <Style x:Key="SuccessBadge" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>
    
    <Style x:Key="WarningBadge" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Warning}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>
    
    <Style x:Key="ErrorBadge" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Error}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>
    
    <Style x:Key="InfoBadge" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Info}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>
    
    <Style x:Key="BadgeText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>
    
    
    <!-- ========================================
         DIVIDER & SEPARATOR
    ========================================= -->
    
    <Style x:Key="DividerStyle" TargetType="BoxView">
        <Setter Property="Color" Value="{StaticResource Divider}" />
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="Margin" Value="0,16" />
    </Style>
    
    <Style x:Key="VerticalDivider" TargetType="BoxView">
        <Setter Property="Color" Value="{StaticResource Divider}" />
        <Setter Property="WidthRequest" Value="1" />
        <Setter Property="VerticalOptions" Value="Fill" />
        <Setter Property="Margin" Value="16,0" />
    </Style>
    
</ResourceDictionary>
