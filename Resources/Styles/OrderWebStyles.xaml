<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 
    ═══════════════════════════════════════════════════════════
    OrderWeb.net Design System - Component Styles
    ═══════════════════════════════════════════════════════════
    
    All styles use Alegreya font and OrderWeb.net colors
    Border Radius: 12px (0.75rem) throughout
    
    Based on: https://orderweb.net design system
    Last Updated: October 12, 2025
    ═══════════════════════════════════════════════════════════
    -->

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- LABEL STYLES -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Base Label Style -->
    <Style x:Key="BaseLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="AlegreyaRegular" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
    </Style>

    <!-- Heading Styles -->
    <Style x:Key="Heading1" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontFamily" Value="AlegreyaBold" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
    </Style>

    <Style x:Key="Heading2" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontFamily" Value="AlegreyaBold" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
    </Style>

    <Style x:Key="Heading3" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontFamily" Value="AlegreyaBold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
    </Style>

    <Style x:Key="Heading4" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontFamily" Value="AlegreyaBold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
    </Style>

    <!-- Body Text Styles -->
    <Style x:Key="BodyText" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="BodyTextSmall" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="Caption" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource MutedForeground}" />
    </Style>

    <!-- Muted Text -->
    <Style x:Key="MutedLabel" TargetType="Label" BasedOn="{StaticResource BaseLabel}">
        <Setter Property="TextColor" Value="{StaticResource MutedForeground}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- BUTTON STYLES -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Base Button Style -->
    <Style x:Key="BaseButton" TargetType="Button">
        <Setter Property="FontFamily" Value="AlegreyaBold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="Padding" Value="20,12" />
    </Style>

    <!-- Primary Button -->
    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonPrimary}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonSecondary}" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
    </Style>

    <!-- Success Button -->
    <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonSuccess}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <!-- Danger Button -->
    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonDanger}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <!-- Large Button -->
    <Style x:Key="LargeButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="Padding" Value="24,16" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- FRAME STYLES (Cards) -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Base Card Style -->
    <Style x:Key="Card" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Card}" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <!-- Large Card -->
    <Style x:Key="CardLarge" TargetType="Frame" BasedOn="{StaticResource Card}">
        <Setter Property="Padding" Value="30" />
    </Style>

    <!-- Header Frame -->
    <Style x:Key="HeaderFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource HeaderBackground}" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="25,20" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <!-- Success Card -->
    <Style x:Key="SuccessCard" TargetType="Frame" BasedOn="{StaticResource Card}">
        <Setter Property="BackgroundColor" Value="{StaticResource Success}" />
        <Setter Property="BorderColor" Value="{StaticResource SuccessForeground}" />
    </Style>

    <!-- Error Card -->
    <Style x:Key="ErrorCard" TargetType="Frame" BasedOn="{StaticResource Card}">
        <Setter Property="BackgroundColor" Value="{StaticResource Destructive}" />
        <Setter Property="BorderColor" Value="{StaticResource DestructiveForeground}" />
    </Style>

    <!-- Muted Card -->
    <Style x:Key="MutedCard" TargetType="Frame" BasedOn="{StaticResource Card}">
        <Setter Property="BackgroundColor" Value="{StaticResource Muted}" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- ENTRY STYLES (Input Fields) -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Base Entry Style -->
    <Style x:Key="BaseEntry" TargetType="Entry">
        <Setter Property="FontFamily" Value="AlegreyaRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Input}" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- PICKER STYLES -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <Style x:Key="BasePicker" TargetType="Picker">
        <Setter Property="FontFamily" Value="AlegreyaRegular" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Foreground}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Input}" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- STATUS BADGE FRAMES -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <Style x:Key="StatusBadgeActive" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource StatusActiveBackground}" />
        <Setter Property="BorderColor" Value="{StaticResource StatusActiveForeground}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style x:Key="StatusBadgePending" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource StatusPendingBackground}" />
        <Setter Property="BorderColor" Value="{StaticResource StatusPendingForeground}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style x:Key="StatusBadgeCancelled" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource StatusCancelledBackground}" />
        <Setter Property="BorderColor" Value="{StaticResource StatusCancelledForeground}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!-- STAT CARD STYLES (Dashboard Cards) -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <Style x:Key="StatCardBlue" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Blue100}" />
        <Setter Property="BorderColor" Value="{StaticResource Blue500}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="25,20" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style x:Key="StatCardGreen" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Green100}" />
        <Setter Property="BorderColor" Value="{StaticResource Green500}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="25,20" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style x:Key="StatCardPurple" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Purple100}" />
        <Setter Property="BorderColor" Value="{StaticResource Purple500}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="25,20" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style x:Key="StatCardIcon" TargetType="Frame">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="WidthRequest" Value="60" />
        <Setter Property="HeightRequest" Value="60" />
    </Style>

</ResourceDictionary>
