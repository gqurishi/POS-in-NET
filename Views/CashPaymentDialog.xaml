<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.CashPaymentDialog"
             BackgroundColor="#80000000"
             VerticalOptions="Fill"
             HorizontalOptions="Fill">
    
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <Border BackgroundColor="White"
               StrokeThickness="0"
               Padding="40"
               WidthRequest="650"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,4" Radius="20" Opacity="0.3"/>
            </Border.Shadow>
            
            <VerticalStackLayout Spacing="18">
                
                <!-- Header with Close Button -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="CASH PAYMENT"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="#111827"
                           VerticalOptions="Center"/>
                    <!-- Close Button - Rectangle -->
                    <Button Grid.Column="1"
                            Text="CLOSE"
                            BackgroundColor="#DC2626"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            WidthRequest="90"
                            HeightRequest="45"
                            CornerRadius="8"
                            Clicked="OnCancelClicked"/>
                </Grid>
                
                <!-- Divider -->
                <BoxView HeightRequest="2" Color="#E5E7EB"/>
                
                <!-- Amount Due -->
                <Border BackgroundColor="#FFFBEB" Stroke="#F59E0B" StrokeThickness="2" Padding="18">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="AMOUNT DUE:"
                               FontSize="22"
                               TextColor="#92400E"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label x:Name="AmountDueLabel"
                               Grid.Column="1"
                               Text="£0.00"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="#B45309"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                
                <!-- Quick Amount Buttons -->
                <Label Text="QUICK AMOUNTS"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#6B7280"
                       HorizontalOptions="Center"/>
                
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <Button Grid.Column="0"
                            Text="£20"
                            BackgroundColor="#DBEAFE"
                            TextColor="#1E40AF"
                            FontSize="22"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="60"
                            Clicked="OnQuick20Clicked"/>
                    
                    <Button Grid.Column="1"
                            Text="£50"
                            BackgroundColor="#DBEAFE"
                            TextColor="#1E40AF"
                            FontSize="22"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="60"
                            Clicked="OnQuick50Clicked"/>
                    
                    <Button Grid.Column="2"
                            Text="£100"
                            BackgroundColor="#DBEAFE"
                            TextColor="#1E40AF"
                            FontSize="22"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="60"
                            Clicked="OnQuick100Clicked"/>
                </Grid>
                
                <!-- Exact Amount Button -->
                <Button Text="EXACT AMOUNT"
                        BackgroundColor="#D1FAE5"
                        TextColor="#065F46"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnExactAmountClicked"/>
                
                <!-- Custom Amount Entry -->
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                    <Entry x:Name="AmountReceivedEntry"
                           Placeholder="Enter amount received"
                           Keyboard="Numeric"
                           FontSize="18"
                           HeightRequest="55"
                           BackgroundColor="#F3F4F6"
                           TextChanged="OnAmountChanged"/>
                    <Button Grid.Column="1"
                            Text="APPLY"
                            BackgroundColor="#7C3AED"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            WidthRequest="90"
                            HeightRequest="55"
                            Clicked="OnApplyAmountClicked"/>
                </Grid>
                
                <!-- Change Display -->
                <Border x:Name="ChangeFrame" 
                       BackgroundColor="#ECFDF5" 
                       Stroke="#10B981" 
                       StrokeThickness="2"
                       Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="CHANGE:"
                               FontSize="22"
                               TextColor="#047857"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label x:Name="ChangeLabel"
                               Grid.Column="1"
                               Text="£0.00"
                               FontSize="30"
                               FontAttributes="Bold"
                               TextColor="#047857"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                
                <!-- Remaining Balance (for partial) -->
                <Border x:Name="RemainingFrame" 
                       BackgroundColor="#FEF2F2" 
                       Stroke="#EF4444" 
                       StrokeThickness="2"
                       Padding="12"
                       IsVisible="False">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="REMAINING:"
                               FontSize="16"
                               TextColor="#DC2626"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label x:Name="RemainingLabel"
                               Grid.Column="1"
                               Text="£0.00"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#DC2626"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                
                <!-- Confirm Payment Button -->
                <Button x:Name="ConfirmButton"
                        Text="CONFIRM PAYMENT"
                        BackgroundColor="#059669"
                        TextColor="White"
                        FontSize="20"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="60"
                        IsEnabled="False"
                        Clicked="OnConfirmClicked"/>
                
            </VerticalStackLayout>
        </Border>
    </Grid>
    
</ContentView>
