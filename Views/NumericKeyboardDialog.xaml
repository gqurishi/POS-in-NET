<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.NumericKeyboardDialog"
             InputTransparent="True">

    <!-- Full Screen Overlay -->
    <Grid x:Name="DialogOverlay" 
          BackgroundColor="#80000000"
          IsVisible="False"
          InputTransparent="False">
        
        <!-- Tap outside to close -->
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnOverlayTapped"/>
        </Grid.GestureRecognizers>
        
        <!-- Dialog Container -->
        <Border x:Name="DialogContainer"
                BackgroundColor="White"
                WidthRequest="320"
                HeightRequest="450"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                StrokeThickness="0"
                Padding="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="#40000000" Offset="0,8" Radius="24" Opacity="0.3"/>
            </Border.Shadow>
            
            <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="0">
                
                <!-- Header -->
                <Border Grid.Row="0" 
                        BackgroundColor="#3B82F6"
                        Padding="20,15"
                        StrokeThickness="0">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Enter Number of Guests"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <Button Grid.Column="1"
                                Text="✕"
                                FontSize="18"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                WidthRequest="40"
                                HeightRequest="40"
                                Clicked="OnCloseClicked"/>
                    </Grid>
                </Border>
                
                <!-- Display Field -->
                <Border Grid.Row="1" 
                        Margin="20,20,20,10"
                        BackgroundColor="#F1F5F9"
                        Stroke="#E2E8F0"
                        StrokeThickness="2"
                        Padding="15,12"
                        HeightRequest="60">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label x:Name="DisplayLabel"
                           Text=""
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1E293B"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                
                <!-- Number Pad -->
                <Grid Grid.Row="2" 
                      Margin="20,10"
                      RowDefinitions="*,*,*,*"
                      ColumnDefinitions="*,*,*"
                      RowSpacing="10"
                      ColumnSpacing="10">
                    
                    <!-- Row 1: 1, 2, 3 -->
                    <Button Grid.Row="0" Grid.Column="0" Text="1" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="0" Grid.Column="1" Text="2" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="0" Grid.Column="2" Text="3" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    
                    <!-- Row 2: 4, 5, 6 -->
                    <Button Grid.Row="1" Grid.Column="0" Text="4" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="1" Grid.Column="1" Text="5" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="1" Grid.Column="2" Text="6" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    
                    <!-- Row 3: 7, 8, 9 -->
                    <Button Grid.Row="2" Grid.Column="0" Text="7" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="2" Grid.Column="1" Text="8" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="2" Grid.Column="2" Text="9" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    
                    <!-- Row 4: Clear, 0, Delete -->
                    <Button Grid.Row="3" Grid.Column="0" Text="C" Clicked="OnClearClicked"
                            BackgroundColor="#FEE2E2" TextColor="#DC2626" FontSize="20" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="3" Grid.Column="1" Text="0" Clicked="OnNumberClicked"
                            BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="24" FontAttributes="Bold"
                            CornerRadius="10"/>
                    <Button Grid.Row="3" Grid.Column="2" Text="⌫" Clicked="OnDeleteClicked"
                            BackgroundColor="#FEF3C7" TextColor="#D97706" FontSize="20" FontAttributes="Bold"
                            CornerRadius="10"/>
                </Grid>
                
                <!-- Confirm Button -->
                <Button Grid.Row="3"
                        x:Name="ConfirmButton"
                        Text="CONFIRM"
                        Margin="20,10,20,20"
                        HeightRequest="55"
                        BackgroundColor="#10B981"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        Clicked="OnConfirmClicked"/>
            </Grid>
        </Border>
    </Grid>
</ContentView>
