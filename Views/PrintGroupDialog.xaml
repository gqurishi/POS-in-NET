<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.PrintGroupDialog">
    
    <!-- Semi-transparent overlay -->
    <Grid BackgroundColor="#80000000">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped" />
        </Grid.GestureRecognizers>
        
        <!-- Dialog Card -->
        <Border WidthRequest="460"
                HeightRequest="600"
                BackgroundColor="White"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,8" Radius="32" Opacity="0.24" />
            </Border.Shadow>
            
            <Grid RowDefinitions="Auto,*,Auto" 
                  Padding="0"
                  RowSpacing="0">
                
                <!-- Header with gradient -->
                <Border Grid.Row="0"
                        BackgroundColor="#6366F1"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 20,20,0,0"
                        Padding="28,24">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Select Print Group"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Label Text="Choose which printer station this item should route to"
                               FontSize="13"
                               TextColor="#C7D2FE"
                               HorizontalOptions="Center"
                               LineBreakMode="WordWrap"
                               HorizontalTextAlignment="Center"
                               Opacity="0.9" />
                    </VerticalStackLayout>
                </Border>
                
                <!-- Content Area - Scrollable List -->
                <ScrollView Grid.Row="1" Padding="20,16">
                    <VerticalStackLayout x:Name="PrintGroupsList" Spacing="10" />
                </ScrollView>
                
                <!-- Close Button -->
                <Grid Grid.Row="2" Padding="28,0,28,24">
                    <Button Text="Cancel"
                            BackgroundColor="White"
                            TextColor="#64748B"
                            FontSize="16"
                            FontAttributes="Bold"
                            BorderColor="#E2E8F0"
                            BorderWidth="2"
                            CornerRadius="12"
                            HeightRequest="52"
                            Clicked="OnCancelClicked" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentView>
