<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.TopBar"
             HeightRequest="150">
    
    <Border BackgroundColor="#F6F9FC"
            StrokeThickness="0">
        
        <Grid Padding="20,0">
            
            <!-- Left Side - Hamburger Menu (Z-Index on top) -->
            <HorizontalStackLayout Grid.Column="0" 
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Spacing="15"
                                   ZIndex="2">
                <!-- Hamburger Menu Button -->
                <ImageButton Source="mian.png"
                             WidthRequest="35"
                             HeightRequest="35"
                             BackgroundColor="Transparent"
                             Clicked="OnMenuClicked"
                             ToolTipProperties.Text="Open Menu"/>
            </HorizontalStackLayout>
            
            <!-- Center Section - Page Title (Absolutely Centered) -->
            <VerticalStackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 ZIndex="1">
                <Label x:Name="PageTitleLabel"
                       Text=""
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
            
            <!-- Right Side - Date/Time (Z-Index on top) -->
            <HorizontalStackLayout HorizontalOptions="End"
                                   VerticalOptions="Center"
                                   Spacing="15"
                                   ZIndex="2">
                
                <!-- Custom Content Placeholder (for Web Orders page) -->
                <ContentPresenter x:Name="CustomContentPresenter" 
                                  VerticalOptions="Center"
                                  IsVisible="False" />
                
                <VerticalStackLayout Spacing="5">
                    <!-- Date and Time -->
                    <Label x:Name="DateTimeLabel"
                           Text="Wednesday, October 15, 2025"
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"
                           HorizontalOptions="End"/>
                    
                    <Label x:Name="TimeLabel"
                           Text="23:47:54"
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#0369A1"
                           HorizontalOptions="End"/>
                    
                    <!-- Logout Icon Button -->
                    <ImageButton Source="outred.png"
                                 WidthRequest="40"
                                 HeightRequest="40"
                                 BackgroundColor="Transparent"
                                 Margin="0,10,0,0"
                                 HorizontalOptions="End"
                                 Clicked="OnLogoutClicked"
                                 ToolTipProperties.Text="Logout"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
            
        </Grid>
    </Border>
</ContentView>
