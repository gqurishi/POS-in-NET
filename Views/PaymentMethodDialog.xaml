<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.PaymentMethodDialog"
             BackgroundColor="#80000000"
             VerticalOptions="Fill"
             HorizontalOptions="Fill">
    
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <Border BackgroundColor="White"
               StrokeThickness="0"
               Padding="40"
               WidthRequest="700"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,4" Radius="20" Opacity="0.3"/>
            </Border.Shadow>
            
            <VerticalStackLayout Spacing="25">
                
                <!-- Header with Close Button -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="SELECT PAYMENT METHOD"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="#111827"
                           VerticalOptions="Center"/>
                    <!-- Close Button - Rectangle -->
                    <Button Grid.Column="1"
                            Text="CLOSE"
                            BackgroundColor="#DC2626"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            WidthRequest="90"
                            HeightRequest="45"
                            CornerRadius="8"
                            Clicked="OnCancelClicked"/>
                </Grid>
                
                <!-- Divider -->
                <BoxView HeightRequest="2" Color="#E5E7EB"/>
                
                <!-- Amount Due -->
                <Border BackgroundColor="#FFFBEB" Stroke="#F59E0B" StrokeThickness="2" Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="AMOUNT DUE:"
                               FontSize="24"
                               TextColor="#92400E"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label x:Name="AmountDueLabel"
                               Grid.Column="1"
                               Text="£0.00"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="#B45309"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                
                <!-- Payment Method Buttons -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                    
                    <!-- Cash Button -->
                    <Button Grid.Column="0"
                            Text="CASH"
                            BackgroundColor="#059669"
                            TextColor="White"
                            FontSize="28"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="130"
                            Clicked="OnCashClicked"/>
                    
                    <!-- Card Button -->
                    <Button Grid.Column="1"
                            Text="CARD"
                            BackgroundColor="#2563EB"
                            TextColor="White"
                            FontSize="28"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="130"
                            Clicked="OnCardClicked"/>
                    
                    <!-- Gift Card Button -->
                    <Button Grid.Column="2"
                            Text="GIFT CARD"
                            BackgroundColor="#7C3AED"
                            TextColor="White"
                            FontSize="24"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="130"
                            Clicked="OnGiftCardClicked"/>
                    
                </Grid>
                
                <!-- Remaining Balance (for partial payments) -->
                <Border x:Name="RemainingFrame" 
                       BackgroundColor="#FEF2F2" 
                       Stroke="#EF4444" 
                       StrokeThickness="2"
                       Padding="15"
                       IsVisible="False">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="REMAINING BALANCE:"
                               FontSize="18"
                               TextColor="#DC2626"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label x:Name="RemainingLabel"
                               Grid.Column="1"
                               Text="£0.00"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#DC2626"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                
            </VerticalStackLayout>
        </Border>
    </Grid>
    
</ContentView>
