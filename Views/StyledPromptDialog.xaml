<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.StyledPromptDialog"
             BackgroundColor="#80000000"
             VerticalOptions="Fill"
             HorizontalOptions="Fill">
    
    <Grid VerticalOptions="Center" 
          HorizontalOptions="Center"
          Padding="40">
        <Frame BackgroundColor="White"
               CornerRadius="20"
               Padding="30"
               WidthRequest="500"
               HasShadow="True"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <VerticalStackLayout Spacing="20">
                
                <!-- Icon -->
                <Border BackgroundColor="#6366F1"
                        StrokeThickness="0"
                        WidthRequest="70"
                        HeightRequest="70"
                        HorizontalOptions="Center"
                        Margin="0,0,0,10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="35"/>
                    </Border.StrokeShape>
                    <Label Text="?"
                           FontSize="36"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                
                <!-- Title -->
                <Label x:Name="TitleLabel"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
                
                <!-- Message -->
                <Label x:Name="MessageLabel"
                       FontSize="15"
                       TextColor="#6B7280"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="WordWrap"/>
                
                <!-- Input Field with Modern Design -->
                <Border BackgroundColor="#F9FAFB"
                        Stroke="#E5E7EB"
                        StrokeThickness="1.5"
                        Padding="15"
                        Margin="0,5,0,5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Entry x:Name="InputEntry"
                           FontSize="16"
                           TextColor="#1F2937"
                           PlaceholderColor="#9CA3AF"
                           BackgroundColor="Transparent"
                           HeightRequest="45" />
                </Border>
                
                <!-- Buttons -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="15"
                      Margin="0,10,0,0">
                    <Button Grid.Column="0"
                            x:Name="CancelButton"
                            Text="Cancel"
                            BackgroundColor="#E5E7EB"
                            TextColor="#6B7280"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            FontSize="16"
                            Clicked="OnCancelClicked" />
                    
                    <Button Grid.Column="1"
                            x:Name="OkButton"
                            Text="Save"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="50"
                            FontSize="16"
                            Clicked="OnOkClicked" />
                </Grid>
                
            </VerticalStackLayout>
        </Frame>
    </Grid>
    
</ContentView>
