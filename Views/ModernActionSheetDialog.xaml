<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.ModernActionSheetDialog"
             BackgroundColor="#80000000"
             VerticalOptions="Fill"
             HorizontalOptions="Fill">
    
    <Grid VerticalOptions="Center" 
          HorizontalOptions="Center"
          Padding="40">
        <Frame BackgroundColor="White"
               CornerRadius="20"
               Padding="30"
               WidthRequest="450"
               HasShadow="True"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <VerticalStackLayout Spacing="20">
                
                <!-- Icon -->
                <Border BackgroundColor="#EEF2FF"
                        StrokeThickness="0"
                        WidthRequest="80"
                        HeightRequest="80"
                        HorizontalOptions="Center"
                        Margin="0,0,0,10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="40"/>
                    </Border.StrokeShape>
                    <Label x:Name="IconLabel"
                           Text="ðŸ§¾"
                           FontSize="40"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                
                <!-- Title -->
                <Label x:Name="TitleLabel"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
                
                <!-- Options Container -->
                <VerticalStackLayout x:Name="OptionsContainer"
                                   Spacing="10"
                                   Margin="0,10,0,10"/>
                
                <!-- Cancel Button -->
                <Button x:Name="CancelButton"
                        Text="Cancel"
                        BackgroundColor="#E5E7EB"
                        TextColor="#6B7280"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="50"
                        FontSize="16"
                        Clicked="OnCancelClicked" />
                
            </VerticalStackLayout>
        </Frame>
    </Grid>
    
</ContentView>
