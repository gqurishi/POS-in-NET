<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.RoleSelectionOverlay"
             x:Name="RoleOverlay"
             IsVisible="False">

    <!-- Semi-transparent overlay -->
    <Grid BackgroundColor="#80000000">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnOverlayTapped"/>
        </Grid.GestureRecognizers>
        
        <!-- Role picker card -->
        <Border VerticalOptions="Center" 
                HorizontalOptions="Center" 
                WidthRequest="320"
                Padding="24"
                BackgroundColor="White">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="#8B5CF6" Radius="24" Opacity="0.2" Offset="0,8"/>
            </Border.Shadow>
            
            <StackLayout Spacing="16">
                <!-- Header -->
                <Label Text="Select User Role" 
                       FontFamily="InterBold" 
                       FontSize="18" 
                       TextColor="#1E293B"
                       HorizontalOptions="Center"/>
                
                <!-- Role options -->
                <StackLayout Spacing="12">
                    <!-- User -->
                    <Border HeightRequest="60" 
                            BackgroundColor="#F8FAFC" 
                            Stroke="#E2E8F0" 
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUserSelected"/>
                        </Border.GestureRecognizers>
                        
                        <Grid Padding="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" 
                                    WidthRequest="32" 
                                    HeightRequest="32" 
                                    BackgroundColor="#3B82F6">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="U" 
                                       FontFamily="InterBold" 
                                       FontSize="14" 
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center" Spacing="2">
                                <Label Text="User" 
                                       FontFamily="InterBold" 
                                       FontSize="16" 
                                       TextColor="#1E293B"/>
                                <Label Text="Basic access and operations" 
                                       FontFamily="InterRegular" 
                                       FontSize="13" 
                                       TextColor="#64748B"/>
                            </StackLayout>
                        </Grid>
                    </Border>
                    
                    <!-- Manager -->
                    <Border HeightRequest="60" 
                            BackgroundColor="#F8FAFC" 
                            Stroke="#E2E8F0" 
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnManagerSelected"/>
                        </Border.GestureRecognizers>
                        
                        <Grid Padding="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" 
                                    WidthRequest="32" 
                                    HeightRequest="32" 
                                    BackgroundColor="#10B981">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="M" 
                                       FontFamily="InterBold" 
                                       FontSize="14" 
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center" Spacing="2">
                                <Label Text="Manager" 
                                       FontFamily="InterBold" 
                                       FontSize="16" 
                                       TextColor="#1E293B"/>
                                <Label Text="Management and reporting access" 
                                       FontFamily="InterRegular" 
                                       FontSize="13" 
                                       TextColor="#64748B"/>
                            </StackLayout>
                        </Grid>
                    </Border>
                    
                    <!-- Admin -->
                    <Border HeightRequest="60" 
                            BackgroundColor="#F8FAFC" 
                            Stroke="#E2E8F0" 
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAdminSelected"/>
                        </Border.GestureRecognizers>
                        
                        <Grid Padding="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" 
                                    WidthRequest="32" 
                                    HeightRequest="32" 
                                    BackgroundColor="#8B5CF6">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="A" 
                                       FontFamily="InterBold" 
                                       FontSize="14" 
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <StackLayout Grid.Column="1" Margin="12,0,0,0" VerticalOptions="Center" Spacing="2">
                                <Label Text="Admin" 
                                       FontFamily="InterBold" 
                                       FontSize="16" 
                                       TextColor="#1E293B"/>
                                <Label Text="Full system access and control" 
                                       FontFamily="InterRegular" 
                                       FontSize="13" 
                                       TextColor="#64748B"/>
                            </StackLayout>
                        </Grid>
                    </Border>
                </StackLayout>
                
                <!-- Cancel button -->
                <Button Text="Cancel" 
                        BackgroundColor="#F1F5F9" 
                        TextColor="#64748B"
                        FontFamily="InterMedium"
                        FontSize="14"
                        HeightRequest="44"
                        Clicked="OnCancelClicked"/>
            </StackLayout>
        </Border>
    </Grid>
</ContentView>