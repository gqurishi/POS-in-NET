<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.VirtualKeyboardDialog"
             IsVisible="False">
    
    <!-- Full Screen Overlay -->
    <Grid BackgroundColor="#80000000"
          HorizontalOptions="Fill"
          VerticalOptions="Fill">
        
        <!-- Dialog Container -->
        <Border BackgroundColor="White"
                Stroke="#E5E7EB"
                StrokeThickness="1"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Padding="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,4" Radius="20" Opacity="0.3"/>
            </Border.Shadow>
            
            <VerticalStackLayout Spacing="0" WidthRequest="600">
                
                <!-- Header -->
                <Grid BackgroundColor="#4A90D9" Padding="20,14" ColumnDefinitions="*,Auto">
                    <Label Text="Search Menu"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="X"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            WidthRequest="36"
                            HeightRequest="36"
                            CornerRadius="18"
                            Clicked="OnCancelClicked"/>
                </Grid>
                
                <!-- Search Input Display -->
                <Border BackgroundColor="#F8FAFC" 
                        Stroke="#E2E8F0" 
                        StrokeThickness="1" 
                        Margin="20,15,20,10"
                        Padding="15,12"
                        HeightRequest="50">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label x:Name="SearchTextLabel"
                               Text=""
                               FontSize="20"
                               TextColor="#1E293B"
                               VerticalOptions="Center"/>
                        <Label x:Name="CursorLabel"
                               Text="|"
                               FontSize="20"
                               TextColor="#3B82F6"
                               VerticalOptions="Center"
                               Margin="0,0,0,0"/>
                    </Grid>
                </Border>
                
                <!-- Keyboard Grid -->
                <VerticalStackLayout Padding="15,5,15,15" Spacing="8">
                    
                    <!-- Row 1: Numbers -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*" ColumnSpacing="6">
                        <Button Grid.Column="0" Text="1" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="1" Text="2" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="2" Text="3" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="3" Text="4" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="4" Text="5" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="5" Text="6" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="6" Text="7" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="7" Text="8" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="8" Text="9" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="9" Text="0" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                    </Grid>
                    
                    <!-- Row 2: Q W E R T Y U I O P -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*" ColumnSpacing="6">
                        <Button Grid.Column="0" Text="Q" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="1" Text="W" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="2" Text="E" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="3" Text="R" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="4" Text="T" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="5" Text="Y" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="6" Text="U" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="7" Text="I" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="8" Text="O" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="9" Text="P" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                    </Grid>
                    
                    <!-- Row 3: A S D F G H J K L -->
                    <Grid ColumnDefinitions="0.5*,*,*,*,*,*,*,*,*,*,0.5*" ColumnSpacing="6">
                        <Button Grid.Column="1" Text="A" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="2" Text="S" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="3" Text="D" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="4" Text="F" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="5" Text="G" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="6" Text="H" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="7" Text="J" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="8" Text="K" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="9" Text="L" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                    </Grid>
                    
                    <!-- Row 4: Z X C V B N M + Backspace -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*,*" ColumnSpacing="6">
                        <Button Grid.Column="1" Text="Z" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="2" Text="X" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="3" Text="C" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="4" Text="V" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="5" Text="B" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="6" Text="N" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="7" Text="M" Style="{x:Null}" BackgroundColor="#F1F5F9" TextColor="#1E293B" FontSize="18" HeightRequest="50" CornerRadius="8" Clicked="OnKeyPressed"/>
                        <Button Grid.Column="8" Grid.ColumnSpan="2" Text="DEL" Style="{x:Null}" BackgroundColor="#EF4444" TextColor="White" FontSize="16" FontAttributes="Bold" HeightRequest="50" CornerRadius="8" Clicked="OnBackspacePressed"/>
                    </Grid>
                    
                    <!-- Row 5: Space and Action Buttons -->
                    <Grid ColumnDefinitions="2*,6*,2*" ColumnSpacing="6">
                        <Button Grid.Column="0" Text="CLEAR" Style="{x:Null}" BackgroundColor="#64748B" TextColor="White" FontSize="14" FontAttributes="Bold" HeightRequest="50" CornerRadius="8" Clicked="OnClearPressed"/>
                        <Button Grid.Column="1" Text="SPACE" Style="{x:Null}" BackgroundColor="#E2E8F0" TextColor="#475569" FontSize="16" HeightRequest="50" CornerRadius="8" Clicked="OnSpacePressed"/>
                        <Button Grid.Column="2" Text="SEARCH" Style="{x:Null}" BackgroundColor="#10B981" TextColor="White" FontSize="14" FontAttributes="Bold" HeightRequest="50" CornerRadius="8" Clicked="OnSearchPressed"/>
                    </Grid>
                    
                </VerticalStackLayout>
                
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentView>
