<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.AddNoteDialog">
    
    <Frame BackgroundColor="#80000000"
           Padding="0"
           HasShadow="False"
           CornerRadius="0">
        
        <Grid HorizontalOptions="Center"
              VerticalOptions="Center"
              WidthRequest="550">
            
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   Padding="0"
                   HasShadow="True">
                
                <VerticalStackLayout Spacing="0">
                    <!-- Header -->
                    <Grid BackgroundColor="#F59E0B"
                          Padding="24,20">
                        <Label x:Name="DialogTitle"
                               Text="Add New Note"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                    </Grid>
                    
                    <!-- Content -->
                    <VerticalStackLayout Padding="24" Spacing="20">
                        
                        <!-- Note Text -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Note Text *"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B" />
                            <Editor x:Name="NoteTextEditor"
                                    Placeholder="Enter note text (e.g., 'No onions', 'Extra spicy', 'Nut allergy - URGENT')"
                                    FontSize="15"
                                    TextColor="#1E293B"
                                    PlaceholderColor="#94A3B8"
                                    BackgroundColor="#F8FAFC"
                                    HeightRequest="100"
                                    AutoSize="TextChanges" />
                        </VerticalStackLayout>
                        
                        <!-- Category -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Category"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B" />
                            <Picker x:Name="CategoryPicker"
                                    Title="Select category"
                                    FontSize="15"
                                    TextColor="#1E293B"
                                    BackgroundColor="#F8FAFC"
                                    HeightRequest="48">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Cooking</x:String>
                                        <x:String>Allergy</x:String>
                                        <x:String>Special Request</x:String>
                                        <x:String>Dietary</x:String>
                                        <x:String>Temperature</x:String>
                                        <x:String>Portion</x:String>
                                        <x:String>Other</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </VerticalStackLayout>
                        
                        <!-- Priority -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Priority *"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B" />
                            <Picker x:Name="PriorityPicker"
                                    Title="Select priority"
                                    FontSize="15"
                                    TextColor="#1E293B"
                                    BackgroundColor="#F8FAFC"
                                    HeightRequest="48"
                                    SelectedIndex="1">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>low</x:String>
                                        <x:String>normal</x:String>
                                        <x:String>high</x:String>
                                        <x:String>urgent</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </VerticalStackLayout>
                        
                        <!-- Display Order -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Display Order"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B" />
                            <Entry x:Name="DisplayOrderEntry"
                                   Placeholder="0"
                                   Keyboard="Numeric"
                                   FontSize="15"
                                   TextColor="#1E293B"
                                   PlaceholderColor="#94A3B8"
                                   BackgroundColor="#F8FAFC"
                                   HeightRequest="48"
                                   Text="0" />
                        </VerticalStackLayout>
                        
                        <!-- Active Switch -->
                        <HorizontalStackLayout Spacing="12">
                            <Switch x:Name="ActiveSwitch"
                                    IsToggled="True"
                                    OnColor="#F59E0B" />
                            <Label Text="Active"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="#1E293B"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                        
                    </VerticalStackLayout>
                    
                    <!-- Buttons -->
                    <Grid ColumnDefinitions="*,*"
                          Padding="24,0,24,24"
                          ColumnSpacing="12">
                        
                        <Button Grid.Column="0"
                                Text="Cancel"
                                BackgroundColor="#E2E8F0"
                                TextColor="#64748B"
                                FontAttributes="Bold"
                                FontSize="15"
                                CornerRadius="8"
                                HeightRequest="48"
                                Clicked="OnCancelClicked" />
                        
                        <Button Grid.Column="1"
                                x:Name="SaveButton"
                                Text="Save"
                                BackgroundColor="#F59E0B"
                                TextColor="White"
                                FontAttributes="Bold"
                                FontSize="15"
                                CornerRadius="8"
                                HeightRequest="48"
                                Clicked="OnSaveClicked" />
                    </Grid>
                    
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Frame>
</ContentView>
