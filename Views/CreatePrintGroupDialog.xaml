<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.CreatePrintGroupDialog">
    
    <!-- Semi-transparent overlay -->
    <Grid BackgroundColor="#80000000">
        <Grid.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnBackgroundTapped" />
        </Grid.GestureRecognizers>
        
        <!-- Dialog Card -->
        <Border WidthRequest="520"
                BackgroundColor="White"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 20"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,8" Radius="32" Opacity="0.24" />
            </Border.Shadow>
            
            <Grid RowDefinitions="Auto,Auto,Auto" 
                  Padding="0"
                  RowSpacing="0">
                
                <!-- Header -->
                <Border Grid.Row="0"
                        BackgroundColor="#22C55E"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 20,20,0,0"
                        Padding="28,24">
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Create New Print Group"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center" />
                        <Label Text="Enter a name for this printer routing group"
                               FontSize="13"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Opacity="0.85" />
                    </VerticalStackLayout>
                </Border>
                
                <!-- Input Area -->
                <VerticalStackLayout Grid.Row="1" Spacing="12" Padding="28,28,28,24">
                    <Label Text="Group Name"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#334155"
                           Margin="0,0,0,4" />
                    
                    <Border BackgroundColor="White"
                            StrokeThickness="2"
                            Stroke="#E2E8F0"
                            StrokeShape="RoundRectangle 10"
                            Padding="14,4">
                        <Entry x:Name="GroupNameEntry"
                               Placeholder="e.g., Kitchen, Bar, Grill, Takeaway"
                               PlaceholderColor="#94A3B8"
                               FontSize="16"
                               TextColor="#0F172A"
                               BackgroundColor="Transparent"
                               ReturnType="Done"
                               Completed="OnGroupNameCompleted" />
                    </Border>
                    
                    <Label Text="Examples: Kitchen, Bar, Grill, Dessert Station, Takeaway, Label Printer"
                           FontSize="12"
                           TextColor="#64748B"
                           Margin="4,0,0,0" />
                    
                    <!-- Color Selection (Optional Enhancement) -->
                    <Label Text="Group Color (Optional)"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#334155"
                           Margin="0,12,0,4" />
                    
                    <HorizontalStackLayout x:Name="ColorPicker" Spacing="10">
                        <!-- Color options will be added in code-behind -->
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                
                <!-- Footer Buttons -->
                <Grid Grid.Row="2"
                      ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      Padding="28,0,28,28">
                    
                    <Button Grid.Column="0"
                            Text="Cancel"
                            BackgroundColor="White"
                            TextColor="#64748B"
                            FontSize="16"
                            FontAttributes="Bold"
                            BorderColor="#E2E8F0"
                            BorderWidth="2"
                            CornerRadius="12"
                            HeightRequest="52"
                            Clicked="OnCancelClicked" />
                    
                    <Button Grid.Column="1"
                            x:Name="CreateButton"
                            Text="Create Group"
                            BackgroundColor="#22C55E"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="52"
                            Clicked="OnCreateClicked">
                        <Button.Shadow>
                            <Shadow Brush="#22C55E" Offset="0,4" Radius="12" Opacity="0.3" />
                        </Button.Shadow>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentView>
