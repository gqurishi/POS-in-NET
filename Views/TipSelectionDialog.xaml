<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.TipSelectionDialog"
             BackgroundColor="#80000000"
             VerticalOptions="Fill"
             HorizontalOptions="Fill">
    
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <Border BackgroundColor="White"
               StrokeThickness="0"
               Padding="40"
               WidthRequest="600"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,4" Radius="20" Opacity="0.3"/>
            </Border.Shadow>
            
            <VerticalStackLayout Spacing="20">
                
                <!-- Header with Close Button -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="ADD TIP"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="#111827"
                           VerticalOptions="Center"/>
                    <!-- Close Button - Rectangle -->
                    <Button Grid.Column="1"
                            Text="CLOSE"
                            BackgroundColor="#DC2626"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            WidthRequest="90"
                            HeightRequest="45"
                            CornerRadius="8"
                            Clicked="OnCancelClicked"/>
                </Grid>
                
                <!-- Divider -->
                <BoxView HeightRequest="2" Color="#E5E7EB"/>
                
                <!-- Order Total -->
                <Border BackgroundColor="#F0FDF4" Stroke="#10B981" StrokeThickness="2" Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Label Text="ORDER TOTAL"
                               FontSize="16"
                               TextColor="#047857"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label x:Name="OrderTotalLabel"
                               Text="£0.00"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="#047857"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Tip Options Grid -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="15" RowSpacing="15">
                    <Button Grid.Row="0" Grid.Column="0"
                            Text="NO TIP"
                            BackgroundColor="#F3F4F6"
                            TextColor="#374151"
                            FontSize="20"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="65"
                            Clicked="OnNoTipClicked"/>
                    
                    <Button Grid.Row="0" Grid.Column="1"
                            Text="£5"
                            BackgroundColor="#DBEAFE"
                            TextColor="#1E40AF"
                            FontSize="24"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="65"
                            Clicked="OnTip5Clicked"/>
                    
                    <Button Grid.Row="1" Grid.Column="0"
                            Text="£10"
                            BackgroundColor="#DBEAFE"
                            TextColor="#1E40AF"
                            FontSize="24"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="65"
                            Clicked="OnTip10Clicked"/>
                    
                    <Button Grid.Row="1" Grid.Column="1"
                            Text="£20"
                            BackgroundColor="#DBEAFE"
                            TextColor="#1E40AF"
                            FontSize="24"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="65"
                            Clicked="OnTip20Clicked"/>
                </Grid>
                
                <!-- Custom Tip -->
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                    <Entry x:Name="CustomTipEntry"
                           Placeholder="Custom tip amount"
                           Keyboard="Numeric"
                           FontSize="16"
                           HeightRequest="55"
                           BackgroundColor="#F3F4F6"/>
                    <Button Grid.Column="1"
                            Text="APPLY"
                            BackgroundColor="#7C3AED"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            WidthRequest="90"
                            HeightRequest="55"
                            Clicked="OnCustomTipClicked"/>
                </Grid>
                
                <!-- Tip Amount Display -->
                <Border BackgroundColor="#FEF3C7" Stroke="#F59E0B" StrokeThickness="2" Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="TIP AMOUNT:"
                               FontSize="20"
                               TextColor="#92400E"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                        <Label x:Name="TipAmountLabel"
                               Grid.Column="1"
                               Text="£0.00"
                               FontSize="28"
                               FontAttributes="Bold"
                               TextColor="#B45309"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>
                
                <!-- Continue Button -->
                <Button Text="CONTINUE TO PAYMENT"
                        BackgroundColor="#059669"
                        TextColor="White"
                        FontSize="20"
                        FontAttributes="Bold"
                        CornerRadius="12"
                        HeightRequest="60"
                        Clicked="OnContinueClicked"/>
                
            </VerticalStackLayout>
        </Border>
    </Grid>
    
</ContentView>
