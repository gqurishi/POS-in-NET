<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.AddTableDialog"
             BackgroundColor="#80000000"
             VerticalOptions="Fill"
             HorizontalOptions="Fill">
    
    <Grid VerticalOptions="Center" 
          HorizontalOptions="Center"
          Padding="40">
        <Frame BackgroundColor="White"
               CornerRadius="16"
               Padding="35"
               WidthRequest="500"
               HasShadow="True"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <VerticalStackLayout Spacing="25">
                
                <!-- Title -->
                <Label Text="Add New Table"
                       FontSize="24"
                       FontFamily="OpenSansSemibold"
                       FontAttributes="Bold"
                       TextColor="#1F2937"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />
                
                <!-- Floor Selection -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Select Floor"
                           FontSize="14"
                           FontFamily="OpenSansSemibold"
                           TextColor="#374151"
                           HorizontalOptions="Start" />
                    
                    <!-- Custom Floor Selection Cards -->
                    <ScrollView MaximumHeightRequest="200"
                               VerticalScrollBarVisibility="Never">
                        <VerticalStackLayout x:Name="FloorSelectionStack"
                                           Spacing="8">
                            <!-- Floor cards will be added dynamically -->
                        </VerticalStackLayout>
                    </ScrollView>
                </VerticalStackLayout>
                
                <!-- Table Number Input -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Table Number"
                           FontSize="14"
                           FontFamily="OpenSansSemibold"
                           TextColor="#374151"
                           HorizontalOptions="Start" />
                    
                    <Border BackgroundColor="#F9FAFB"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 10"
                            Padding="15">
                        <Entry x:Name="TableNumberEntry"
                               FontSize="16"
                               FontFamily="OpenSansRegular"
                               TextColor="#1F2937"
                               PlaceholderColor="#9CA3AF"
                               Placeholder="e.g., Table 1, T1, etc."
                               BackgroundColor="Transparent"
                               HeightRequest="40" />
                    </Border>
                </VerticalStackLayout>
                
                <!-- Table Design Selection -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Table Design"
                           FontSize="14"
                           FontFamily="OpenSansSemibold"
                           TextColor="#374151"
                           HorizontalOptions="Start" />
                    
                    <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                        <!-- Design 1 -->
                        <Border x:Name="Design1Border"
                                BackgroundColor="#F0F9FF"
                                Stroke="#3B82F6"
                                StrokeThickness="3"
                                Padding="12"
                                WidthRequest="80"
                                HeightRequest="80">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnDesign1Clicked" />
                            </Border.GestureRecognizers>
                            <Image Source="table_1.png"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Aspect="AspectFit" />
                        </Border>
                        
                        <!-- Design 2 -->
                        <Border x:Name="Design2Border"
                                BackgroundColor="White"
                                Stroke="#E5E7EB"
                                StrokeThickness="2"
                                Padding="12"
                                WidthRequest="80"
                                HeightRequest="80">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnDesign2Clicked" />
                            </Border.GestureRecognizers>
                            <Image Source="table_2.png"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Aspect="AspectFit" />
                        </Border>
                        
                        <!-- Design 3 -->
                        <Border x:Name="Design3Border"
                                BackgroundColor="White"
                                Stroke="#E5E7EB"
                                StrokeThickness="2"
                                Padding="12"
                                WidthRequest="80"
                                HeightRequest="80">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnDesign3Clicked" />
                            </Border.GestureRecognizers>
                            <Image Source="table_3.png"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Aspect="AspectFit" />
                        </Border>
                        
                        <!-- Design 4 -->
                        <Border x:Name="Design4Border"
                                BackgroundColor="White"
                                Stroke="#E5E7EB"
                                StrokeThickness="2"
                                Padding="12"
                                WidthRequest="80"
                                HeightRequest="80">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnDesign4Clicked" />
                            </Border.GestureRecognizers>
                            <Image Source="table_4.png"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Aspect="AspectFit" />
                        </Border>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                
                <!-- Buttons -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="15"
                      Margin="0,15,0,0">
                    <Button Grid.Column="0"
                            x:Name="CancelButton"
                            Text="Cancel"
                            BackgroundColor="#F3F4F6"
                            TextColor="#6B7280"
                            FontFamily="OpenSansSemibold"
                            CornerRadius="10"
                            HeightRequest="48"
                            FontSize="16"
                            Clicked="OnCancelClicked" />
                    
                    <Button Grid.Column="1"
                            x:Name="CreateButton"
                            Text="Create Table"
                            BackgroundColor="#3B82F6"
                            TextColor="White"
                            FontFamily="OpenSansSemibold"
                            CornerRadius="10"
                            HeightRequest="48"
                            FontSize="16"
                            FontAttributes="Bold"
                            Clicked="OnCreateClicked" />
                </Grid>
                
            </VerticalStackLayout>
        </Frame>
    </Grid>
    
</ContentView>
