<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POS_in_NET.Views.CardPaymentDialog"
             BackgroundColor="#80000000"
             VerticalOptions="Fill"
             HorizontalOptions="Fill">
    
    <Grid VerticalOptions="Fill" HorizontalOptions="Fill">
        <Border BackgroundColor="White"
               StrokeThickness="0"
               Padding="40"
               WidthRequest="600"
               VerticalOptions="Center"
               HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,4" Radius="20" Opacity="0.3"/>
            </Border.Shadow>
            
            <VerticalStackLayout Spacing="25">
                
                <!-- Header with Close Button -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="CARD PAYMENT"
                           FontSize="30"
                           FontAttributes="Bold"
                           TextColor="#111827"
                           VerticalOptions="Center"/>
                    <!-- Close Button - Rectangle -->
                    <Button Grid.Column="1"
                            Text="CLOSE"
                            BackgroundColor="#DC2626"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            WidthRequest="90"
                            HeightRequest="45"
                            CornerRadius="8"
                            Clicked="OnCancelClicked"/>
                </Grid>
                
                <!-- Card Icon -->
                <Border BackgroundColor="#DBEAFE"
                        StrokeThickness="2"
                        Stroke="#3B82F6"
                        WidthRequest="140"
                        HeightRequest="80"
                        HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label Text="CARD"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#1E40AF"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>
                
                <!-- Divider -->
                <BoxView HeightRequest="2" Color="#E5E7EB"/>
                
                <!-- Amount -->
                <Border BackgroundColor="#EFF6FF" Stroke="#3B82F6" StrokeThickness="2" Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                        <Label Text="CHARGE AMOUNT"
                               FontSize="18"
                               TextColor="#1E40AF"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>
                        <Label x:Name="AmountLabel"
                               Text="Â£0.00"
                               FontSize="44"
                               FontAttributes="Bold"
                               TextColor="#1E3A8A"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
                
                <!-- Processing Message -->
                <Label x:Name="StatusLabel"
                       Text="Has the card payment been completed?"
                       FontSize="20"
                       TextColor="#374151"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"/>
                
                <!-- Action Buttons -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                    <Button Grid.Column="0"
                            Text="NO"
                            BackgroundColor="#FEE2E2"
                            TextColor="#DC2626"
                            FontSize="26"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="70"
                            Clicked="OnNoClicked"/>
                    
                    <Button Grid.Column="1"
                            Text="YES"
                            BackgroundColor="#059669"
                            TextColor="White"
                            FontSize="26"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="70"
                            Clicked="OnYesClicked"/>
                </Grid>
                
            </VerticalStackLayout>
        </Border>
    </Grid>
    
</ContentView>
